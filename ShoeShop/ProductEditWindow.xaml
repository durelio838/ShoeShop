<Window x:Class="ShoeShop.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товар" Height="400" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel Margin="15">
		<StackPanel x:Name="pnlArt">
			<TextBlock Text="Артикул:"/>
			<TextBox x:Name="txtArt" Margin="0,3,0,10" IsReadOnly="True" Background="#F5F5F5"/>
		</StackPanel>

		<TextBlock Text="Наименование:"/>
		<TextBox x:Name="txtName" Margin="0,3,0,10"/>

		<TextBlock Text="Цена:"/>
		<TextBox x:Name="txtPrice" Margin="0,3,0,10"/>

		<TextBlock Text="Скидка (%):"/>
		<TextBox x:Name="txtDisc" Margin="0,3,0,10"/>

		<TextBlock Text="Остаток:"/>
		<TextBox x:Name="txtStock" Margin="0,3,0,10"/>

		<TextBlock Text="Описание:"/>
		<TextBox x:Name="txtDesc" Height="50" TextWrapping="Wrap" Margin="0,3,0,15"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Сохранить" Click="BtnSave_Click" Background="#00FA9A" Width="80" Margin="0,0,5,0"/>
			<Button Content="Отмена" Click="BtnCancel_Click" Width="70"/>
		</StackPanel>
	</StackPanel>
</Window>