<Window x:Class="ShoeShop.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="400" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel Margin="15">
		<TextBlock Text="Article:"/>
		<TextBox x:Name="txtArt" Margin="0,3,0,10"/>

		<TextBlock Text="Name:"/>
		<TextBox x:Name="txtName" Margin="0,3,0,10"/>

		<TextBlock Text="Price:"/>
		<TextBox x:Name="txtPrice" Margin="0,3,0,10"/>

		<TextBlock Text="Discount:"/>
		<TextBox x:Name="txtDisc" Margin="0,3,0,10"/>

		<TextBlock Text="Stock:"/>
		<TextBox x:Name="txtStock" Margin="0,3,0,10"/>

		<TextBlock Text="Description:"/>
		<TextBox x:Name="txtDesc" Height="50" TextWrapping="Wrap" Margin="0,3,0,15"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Save" Click="BtnSave_Click" Background="#00FA9A" Width="70" Margin="0,0,5,0"/>
			<Button Content="Cancel" Click="BtnCancel_Click" Width="70"/>
		</StackPanel>
	</StackPanel>
</Window>