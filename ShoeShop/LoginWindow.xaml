<Window x:Class="ShoeShop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход"
        Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Times New Roman"
        FontSize="14"
        ResizeMode="NoResize">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Background="#7FFF00">
			<Image Source="/Images/icon.jpg" Height="60" Stretch="Uniform" Margin="15"/>
			<TextBlock Text="Магазин" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
		</StackPanel>

		<StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="30">
			<TextBlock Text="Логин:"/>
			<TextBox x:Name="txtLogin" Height="26" Margin="0,4,0,12"/>

			<TextBlock Text="Пароль:"/>
			<PasswordBox x:Name="txtPassword" Height="26" Margin="0,4,0,18"/>

			<Button x:Name="btnLogin" Content="Войти" Click="BtnLogin_Click"
                    Background="#00FA9A" Height="30" Margin="0,0,0,8"/>

			<Button x:Name="btnGuest" Content="Гость" Click="BtnGuest_Click" Height="30"/>

			<TextBlock x:Name="txtError" Foreground="Red"
                       HorizontalAlignment="Center" Margin="0,12,0,0"/>
		</StackPanel>
	</Grid>
</Window>