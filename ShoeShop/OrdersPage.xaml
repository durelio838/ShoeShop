<Page x:Class="ShoeShop.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel x:Name="pnlAdmin" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
			<Button Content="Добавить" Click="BtnAdd_Click" Background="#00FA9A"/>
		</StackPanel>

		<DataGrid x:Name="dgOrders" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgOrders_Changed">
			<DataGrid.Columns>
				<DataGridTextColumn Header="№" Binding="{Binding OrderNumber}" Width="50"/>
				<DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat=d}" Width="90"/>
				<DataGridTextColumn Header="Доставка" Binding="{Binding DeliveryDate, StringFormat=d}" Width="90"/>
				<DataGridTextColumn Header="Адрес" Binding="{Binding PickupPoint.Address}" Width="200"/>
				<DataGridTextColumn Header="Клиент" Binding="{Binding User.FullName}" Width="150"/>
				<DataGridTextColumn Header="Код" Binding="{Binding PickupCode}" Width="60"/>
				<DataGridTextColumn Header="Статус" Binding="{Binding Status.StatusName}" Width="80"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
			<TextBlock x:Name="txtCount"/>
			<Button x:Name="btnEdit" Content="Изменить" Click="BtnEdit_Click" Visibility="Collapsed" Margin="15,0,5,0"/>
			<Button x:Name="btnDel" Content="Удалить" Click="BtnDel_Click" Visibility="Collapsed" Background="#FFDDDD"/>
		</StackPanel>
	</Grid>
</Page>