<Page x:Class="ShoeShop.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Orders">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel x:Name="pnlAdmin" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
			<Button Content="Add" Click="BtnAdd_Click" Background="#00FA9A"/>
		</StackPanel>

		<DataGrid x:Name="dgOrders" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgOrders_Changed">
			<DataGrid.Columns>
				<DataGridTextColumn Header="N" Binding="{Binding OrderNumber}" Width="50"/>
				<DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat=d}" Width="90"/>
				<DataGridTextColumn Header="Delivery" Binding="{Binding DeliveryDate, StringFormat=d}" Width="90"/>
				<DataGridTextColumn Header="Address" Binding="{Binding PickupPoint.Address}" Width="200"/>
				<DataGridTextColumn Header="Client" Binding="{Binding User.FullName}" Width="150"/>
				<DataGridTextColumn Header="Code" Binding="{Binding PickupCode}" Width="60"/>
				<DataGridTextColumn Header="Status" Binding="{Binding Status.StatusName}" Width="80"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
			<TextBlock x:Name="txtCount"/>
			<Button x:Name="btnEdit" Content="Edit" Click="BtnEdit_Click" Visibility="Collapsed" Margin="15,0,5,0"/>
			<Button x:Name="btnDel" Content="Delete" Click="BtnDel_Click" Visibility="Collapsed" Background="#FFDDDD"/>
		</StackPanel>
	</Grid>
</Page>