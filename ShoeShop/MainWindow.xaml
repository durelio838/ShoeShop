<Window x:Class="ShoeShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Times New Roman"
        FontSize="14">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#7FFF00">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Images/icon.jpg" Height="40" Margin="10" Stretch="Uniform"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8">
                <TextBlock Text="Магазин" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="txtUserInfo" FontSize="11"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Button x:Name="btnProducts" Content="Товары" Click="BtnProducts_Click"
                        Background="#00FA9A" Margin="3" Width="70" Height="26"/>
                <Button x:Name="btnOrders" Content="Заказы" Click="BtnOrders_Click"
                        Visibility="Collapsed" Margin="3" Width="70" Height="26"/>
                <Button x:Name="btnLogout" Content="Выход" Click="BtnLogout_Click"
                        Margin="3" Width="70" Height="26"/>
            </StackPanel>
        </Grid>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>