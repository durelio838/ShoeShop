<Window x:Class="ShoeShop.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый заказ" Height="320" Width="360"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock Text="Клиент:"/>
        <ComboBox x:Name="cmbUser" DisplayMemberPath="FullName" Margin="0,3,0,10" Height="26"/>

        <TextBlock Text="Пункт выдачи:"/>
        <ComboBox x:Name="cmbPoint" DisplayMemberPath="Address" Margin="0,3,0,10" Height="26"/>

        <TextBlock Text="Дата доставки:"/>
        <DatePicker x:Name="dpDelivery" Margin="0,3,0,10" Height="26"/>

        <TextBlock Text="Статус:"/>
        <ComboBox x:Name="cmbStatus" DisplayMemberPath="StatusName" Margin="0,3,0,20" Height="26"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать" Click="BtnCreate_Click" Background="#00FA9A" Width="80" Margin="0,0,8,0" Height="26"/>
            <Button Content="Отмена" Click="BtnCancel_Click" Width="70" Height="26"/>
        </StackPanel>
    </StackPanel>
</Window>